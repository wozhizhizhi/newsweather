<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mytitle="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <com.aji.newsweather.weight.MyTitle
        android:id="@+id/choosearea_mytitleId"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        mytitle:my_title_bg="@color/colorAccent"
        mytitle:my_title_leftiv="@mipmap/ic_back"
        mytitle:title_name="天气">

    </com.aji.newsweather.weight.MyTitle>

    <ListView
        android:id="@+id/choosearea_listviewId"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
